
<div class="container">
  <h1>NextFlix</h1>
  <br>
   <div class="movie-container">
       <h4 class="text-muted">Recommendations</h4>
       <div id="Recommendations" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#Recommendations" data-slide-to="0" class="active"></li>
            <li data-target="#Recommendations" data-slide-to="1"></li>
            <li data-target="#Recommendations" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <img src="http://placehold.it/1200x315" alt="...">
              <div class="text-center">
                  <h3>Caption Text</h3>
              </div>
            </div>
            <div class="item">
              <img src="http://placehold.it/1200x315" alt="...">
              <div class="text-center">
                  <h3>Caption Text</h3>
              </div>
            </div>
            <div class="item">
              <img src="http://placehold.it/1200x315" alt="...">
              <div class="text-center">
                  <h3>Caption Text</h3>
              </div>
            </div>
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#Recommendations" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>
          <a class="right carousel-control" href="#Recommendations" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
        </div> <!-- Carousel -->
   </div>
   <div class="movie-container">
       <h4 class="text-muted">Popular</h4>
       <div id="popular" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#popular" data-slide-to="0" class="active"></li>
            <li data-target="#popular" data-slide-to="1"></li>
            <li data-target="#popular" data-slide-to="2"></li>
            <li data-target="#popular" data-slide-to="3"></li>
            <li data-target="#popular" data-slide-to="4"></li>
          </ol>
          <div class="carousel-inner">
          <% counter = 0 %>          
          <% @popular.each do |movie|%>
            <% status = counter == 0 ? "\"item active\"" : "\"item\"" %>
            <div class= <%= status.html_safe %> >
              <%= image_tag( movie.image_url, alt: movie.title) %>
              <div class="text-center">
                  <h3><%= movie.title %></h3>
              </div>
            </div>
            <% counter += 1 %>
          <% end %>
          </div>
          <!-- Controls -->
          <a class="left carousel-control" href="#popular" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>
          <a class="right carousel-control" href="#popular" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
        </div> <!-- Carousel -->
   </div>
   <div class="push"></div>
</div>