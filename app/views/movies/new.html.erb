<% provide(:title, 'Is it on?') %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <br/>
    <br/>
    <br/>
    <br/>
     <%= form_for(@movie) do |f| %>
            <%= render 'shared/movie_error_messages' %>

            <%= f.label :title %>
